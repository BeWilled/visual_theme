<div class="user-header">
{% if user.anonymous == true %}
    <a class="login" href="/login">Login</a>
    <a class="sign-up" href="/sign-up">Sign Up</a>
{% else %}
    <a class="logout" href="/user/logout">Logout</a>
    <a class="profile-image" href="/profile"> <img src="{{ file_url(user.user_picture.entity.fileuri) }}"/></a>
    <a class="profile-link" href="/profile"> {{ user.username }}</a>
{% endif %}
</div>